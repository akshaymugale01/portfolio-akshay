{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "node", // Change from "bundler" to "node"
    "allowJs": true, // Allow JavaScript files to be included
    "resolveJsonModule": true,
    "isolatedModules": false, // Change to false if you want to emit output files
    "noEmit": false, // Change to false if you want TypeScript to emit output files
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "**/*.tsx"], // Change to include all files in the "src" directory
  "references": [{ "path": "./tsconfig.node.json" }]
}
